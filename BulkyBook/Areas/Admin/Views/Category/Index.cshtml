@model List<BulkyBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<br/>

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Upsert">
        <em class="fas fa-plus"></em>&nbsp; Create Category</a>
    </div>
</div>

<br/>

<div class="p-4 border rounded">
    @if (Model.Count > 0)
{
    <table id="tblData" class="table table-striped table-bordered w-100">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th></th>
            </tr>
            
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>


                }
        </thead>
    </table>
} else
{
    <div class="alert alert-warning">No Categories found</div>
}
</div>