@model BulkyBook.Models.Company
@{
    ViewData["Title"] = "Create";
    var title = "Create Company";
    if (Model.Id != 0)
    {
        title = "Update Company";
    }
}

<h1>@title</h1>


<div class="row">
    <div class="col-md-12">
        <form method="post">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="StreetAddress"></label>
                <input asp-for="StreetAddress" class="form-control" />
                <span class="text-danger" asp-validation-for="StreetAddress"></span>
            </div>

            <div class="form-group">
                <label asp-for="State"></label>
                <input asp-for="State" class="form-control" />
                <span class="text-danger" asp-validation-for="State"></span>
            </div> 
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span class="text-danger" asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span class="text-danger" asp-validation-for="PostalCode"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsAuthorizedCompany"></label>
                <input type="checkbox" asp-for="IsAuthorizedCompany" />
                <span class="text-danger" asp-validation-for="IsAuthorizedCompany"></span>
            </div>

            <div>
                @if (Model.Id != 0)
                {
                    <partial name="_EditAndBackToList" model="@Model.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToList" />
                }

            </div>
        </form>
    </div>
</div>
