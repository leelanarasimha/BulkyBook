@model BulkyBook.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Create";
    var title = "Create Product";
    if (Model.Product.Id != 0)
    {
        title = "Update Product";
    }
}

<h1>@title</h1>


<div class="row">
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Title"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span class="text-danger" asp-validation-for="Product.Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.ISBN"></label>
                <textarea asp-for="Product.ISBN" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.ISBN"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Author"></label>
                <textarea asp-for="Product.Author" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Author"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Description"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.ListPrice"></label>
                <textarea asp-for="Product.ListPrice" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <textarea asp-for="Product.Price" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Price"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price50"></label>
                <textarea asp-for="Product.Price50" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Price50"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price100"></label>
                <textarea asp-for="Product.Price100" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="Product.Price100"></span>
            </div>

            <div class="form-group">
                <label>Category</label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
            </div>

            <div class="form-group">
                <label>Cover Type</label>
                <select asp-for="Product.CoverTypeId" asp-items="Model.CoverTypeList" class="form-control">
                    <option value="">Select Cover Type</option>
                </select>
                <span class="text-danger" asp-validation-for="Product.CoverTypeId"></span>
            </div>

            <div>
                <label>Image</label>
                <input type="file" id="uploadBox" name="files" class="form-control" multiple/>
            </div>

            <div class="mt-4">
                @if (Model.Product.Id != 0)
                {
                    <partial name="_EditAndBackToList" model="@Model.Product.Id" />
                }
                else
                {
                    <partial name="_CreateAndBackToList" />
                }

            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Model.Product.ImageUrl" class="w-100 mt-3"/>
    </div>
</div>
